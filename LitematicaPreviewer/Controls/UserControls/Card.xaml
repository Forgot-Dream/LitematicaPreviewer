<UserControl
    x:Class="LitematicaPreviewer.Controls.UserControls.Card"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:local="clr-namespace:LitematicaPreviewer.Controls.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:modern="http://schemas.inkore.net/lib/ui/wpf/modern"
    d:DesignHeight="200"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Border
        x:Name="CardBorder"
        Padding="10"
        Background="Transparent"
        BorderBrush="Gray"
        BorderThickness="1"
        CornerRadius="5">
        <ContentPresenter x:Name="CardContent" />
    </Border>
</UserControl>
